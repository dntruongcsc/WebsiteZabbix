    <div class="col-md-6 text-right">
        @*<div class="btn-group">
            <a href="@Url.Action("NhomTin","TinTuc",new { area="TinTuc"})" class="btn btn-secondary"><i class="fa fa-sitemap">&nbsp;</i>Quản lý nhóm tin</a>
        </div>*@

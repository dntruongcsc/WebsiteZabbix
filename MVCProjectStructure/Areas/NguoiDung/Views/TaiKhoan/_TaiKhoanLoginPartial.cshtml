@model MVCProjectStructure.Models.CommonModel.CommonTaiKhoan.TaiKhoanInput.DangNhapInput
@using (Html.BeginForm("Login", "TaiKhoan", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.NenTang)
    @Html.Hidden("ReturnUrl", (string)ViewBag.ReturnUrl)
    <div class="khung-dang-nhap">
        <div class="dong">
            <div class="tieu-de">ĐĂNG NHẬP HỆ THỐNG</div>
        </div>
        <div class="dong">
            <img src="~/Images/Images/user_login.png" class="bieu-tuong" />
            @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control nhap-lieu", @autocomplete = "off", @placeholder = "Tên đăng nhập" } })
            @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })
        </div>
        <div class="dong">
            <img src="~/Images/Images/padlock.png" class="bieu-tuong" />
            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control nhap-lieu", @placeholder = "Mật khẩu" } })
            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
        </div>
        <div class="dong">

            <button type="submit" class="btn btn-primary xu-ly">Đăng nhập</button>
            <div class="text-danger">@Html.Raw(ViewBag.ThongBao)</div>
        </div>

    </div>
}


@using Common.Enum;
@model MVCProjectStructure.Models.CommonModel.CommonNguoiDung.NguoiDungInput.DoiMatKhau
@{
    ViewBag.Title = "DoiMatKhau";
    Layout = ChucNang.GiaoDien.SBAdmin;
    ViewBag.active = "abc";

}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Home",new { area = "" })"><i class="fa fa-tachometer"></i> Bảng điều khiển</a>
    </li>
    <li class="breadcrumb-item active">Đổi mật khẩu</li>
</ol>
@if (Model != null)
{
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card card-outline-secondary">
                <div class="card-header">
                    <h5 class="mb-0">Đổi mật khẩu</h5>
                </div>
                <div class="card-body">
                    <form method="post" action=@Url.Action("DoiMatKhau","TaiKhoan", new {area = "NguoiDung"})>
                        <input id="TenTaiKhoan" name="TenTaiKhoan" type="text" hidden value="@Model.TenTaiKhoan" />
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input id="MatKhau" name="MatKhau" type="password" autocomplete="new-password" class="form-control" value="@Model.MatKhau" placeholder="Mật khẩu">
                        </div>
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input id="MatKhauMoi" name="MatKhauMoi" type="password" class="form-control" value="@Model.MatKhauMoi" placeholder="Mật khẩu mới">
                        </div>
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input id="NhapLaiMatKhau" name="NhapLaiMatKhau" type="password" class="form-control" placeholder="Nhập lại mật khẩu mới">
                        </div>
                        <div id="Div_ThongBaoDoiMatKhau" class="mt-3">
                            @if (ViewBag.ThongBao != null)
                            {
                                <div id="ThongBaoDoiMatKhau" class="alert alert-danger" role="alert">
                                    @ViewBag.ThongBao
                                </div>
                                <script>
                                    window.setTimeout(function () {
                                        $('#ThongBaoDoiMatKhau').remove();
                                    }, 5000);
                                </script>
                            }
                        </div>
                        <div class="text-center">
                            <button id="Luu" type="submit" class="btn btn-mac-dinh"><i class="fa fa-save">&nbsp;</i>Lưu</button>
                            <a href="@Url.Action("Index","Home", new { area=""})" class="btn btn-secondary"><i class="fa fa-close">&nbsp;</i>Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $('#MatKhau').val();
    })
</script>



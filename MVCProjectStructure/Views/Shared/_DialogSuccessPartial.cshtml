
@if (TempData["Success"] != null)
{
    <div class="modal fade" id="successDialog" role="dialog" style="margin-top:50px;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thông báo thành công!</h4>
                </div>
                <div class="modal-body">
                    <p id="noiDungThongBao">@Html.Raw(TempData["Success"])</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" style="background-color:#37B34A; width:80px" data-dismiss="modal" autofocus>Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#successDialog").on('show.bs.modal', function () {
                $("#page-wrapper").css({ "z-index": "unset" });
            });
            $("#successDialog").on('hidden.bs.modal', function () {
                $("#page-wrapper").css({ "z-index": "10" });
            });
            $("#successDialog").modal({ backdrop: "static" });
        })
    </script>
}

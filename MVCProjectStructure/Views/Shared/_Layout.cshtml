<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - Dashboard</title>
    <!-- Bootstrap core CSS-->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Custom fonts for this template-->
    <link href="~/Template/sb-admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <!-- Page level plugin CSS-->
    <!-- Custom styles for this template-->
    <link href="~/Template/sb-admin/css/sb-admin.css" rel="stylesheet" />
    <link href="~/Template/sb-admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/csc/csc.style.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Template/sb-admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Template/sb-admin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Template/sb-admin/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/Scripts/jquery.preloaders.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!-- Custom scripts for all pages-->

    <link href="~/Content/csc/csc.style.css" rel="stylesheet" />
    <script src="~/Scripts/csc/csc.jquery-1.1.1.js"></script>
    <script src="~/Scripts/csc/csc.message.js"></script>
    <script src="~/Scripts/csc/csc.modal.js"></script>
    @*<script src="~/Scripts/csc/csc.xuly.js"></script>*@
    <script src="~/Scripts/csc/csc.xuly-1.0.2.js"></script>
    @RenderSection("styles", required: false)
</head>
<body id="page-top">
    @Html.Partial("_PartialHeader")
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="MenuLeft">
            @*@Html.Action("PartialMenuLeft", "Menu", new { area = "Admin" })*@
        </div>
        <div id="content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2018</span>
                    </div>
                </div>
            </footer>
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Message-->
    <div class="modal fade" id="ModalMessage" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thông báo</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal"><i class="fa fa-close"></i> Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <!--Create/Edit -- Modal -->
    <div class="modal fade" id="ModalThemCapNhat" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header bg-mac-dinh text-white">
                    <h6 class="modal-title" id="ModalLabel">Thêm/chỉnh sửa</h6>
                </div>
                <!-- Modal Body -->
                <div id="ModalBody_ThemCapNhat" class="modal-body">
                </div>
                <div id="ThongBao_Modal" class="mx-3"></div>
                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button id="btnLuu" type="button" value="save" name="save" class="btn btn-mac-dinh">
                        <i class="fa fa-save"></i> Lưu
                    </button>
                    <button id="btnLuuDong" type="button" class="btn btn-success">
                        <i class="fa fa-save"></i> Lưu đóng
                    </button>
                    <button id="btnDong" type="button" class="btn btn-secondary">
                        <i class="fa fa-close"></i> Đóng
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div id="divModalConfirm"></div>
    <!-- Bootstrap core JavaScript-->
    @Html.Partial("../Partials/_PartialModalAlert")
    <script src="~/Scripts/sb-admin.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    $(document).ajaxStart(function () {
        Loadding.Show('', LoadingIcon.Processing_Dotted);
    })
    $(document).ajaxStop(function () {
        Loadding.Hide();
    })
    $(document).ajaxComplete(function () {
        Loadding.Hide();
    })
    $(document).ajaxError(function () {
        Loadding.Hide();
    })
    $(document).ready(function () {
        $('.nav-item.@ViewBag.Active').addClass("active");
        var activeMenuCoCon = $('.dropdown-item.@ViewBag.Active');
        activeMenuCoCon.addClass("active");
        activeMenuCoCon.parent().addClass("show");
        activeMenuCoCon.parent().parent().addClass("show");
        activeMenuCoCon.parent().parent().addClass("active");
    });
</script>